<main id="catalog">
    <section class="game-market">
        <h1>Game Trade Code</h1>
        <div class="offer-list">
            {{#each games}}
                <div class="game">
                    <div class="game-img">
                        <img src="./static/images/witcher-3.jpg">
                    </div>
                    <div class="game-info">
                        <h1>{{name}}</h1>
                        <p><span>Platform: </span>{{platform}}</p>
                        <p><span>Genre: </span>{{genre}}</p>
                        <p><span>Price: </span>${{price}}</p>
                    </div>

                    <a href="#" class="btn-details">Details</a>
                </div>
            {{else}}
            <p>no games</p>
            {{/each}}
        </div>
        <!-- <div class="no-offer">
                <p>There are no game offers found!</p>
            </div> -->
    </section>
</main>